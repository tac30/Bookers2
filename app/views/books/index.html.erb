<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render "shared/user_info", user: @user, new_book: @new_book %>
        </div>

        <div class="col-md-8 offset-md-1">
            <% if @book %>
                <% if @book.errors.any? %>
                    <div class="alert alert-danger">
                        <p>
                            <%= @book.errors.count %> errors prohibited this obj from being saved:
                        </p>
                        <ul>
                            <% @book.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
            <% end %>
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |item| %>
                        <tr>
                            <td>
                                <%= link_to user_path(item.user.id) do %>
                                    <%= image_tag item.user.get_profile_image(50,50) %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book_path(item.id), class: "text-decoration-none" do %>
                                    <%= item.title %>
                                <% end %>
                            </td>
                            <td>
                                <%= item.body %>
                            </td>
                            <% if item.favorited_by?(current_user) %>
                                <td>
                                    <%= link_to book_favorites_path(item), method: :delete, class: "text-decoration-none" do %>
                                        <i class="fas fa-heart" style="color: red"></i>
                                        <span style="color: red"><%= item.favorites.count %></span>
                                    <% end %>
                                </td>
                            <% else %>
                                <td>
                                    <%= link_to book_favorites_path(item), method: :post, class: "text-decoration-none" do %>
                                        <i class="fas fa-heart"></i>
                                        <span><%= item.favorites.count %></span>
                                    <% end %>
                                </td>
                            <% end %>
                            <td>
                                <span>
                                    コメント数:
                                    <%= item.book_comments.count %>
                                </span>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>