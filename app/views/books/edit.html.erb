<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <% if @book.errors.any? %>
                <div class="alert alert-danger">
                    <p>
                        <%= @book.errors.count %> errors prohibited this obj from being saved:
                    </p>
                    <ul>
                        <% @book.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <h1>
                Editing Book
            </h1>
            <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
                <label class="col-12">
                    Title
                    <%= f.text_field :title, class: "form-control", value: @book.title %>
                </label>
                <label class="col-12">
                    Opinion
                    <%= f.text_area :body, class: "form-control", value: @book.body %>
                </label>
                <div>
                    <%= f.submit "Update Book", class: "btn btn-secondary" %>
                </div>
                <div>
                    <%= link_to "Show", book_path(@book.id) %>
                    <span>|</span>
                    <%= link_to "Back", books_path %>
                </div>
            <% end %>
        </div>
    </div>
</div>
