<p>
    <%= render 'shared/flash_message' %>
</p>

<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
    <tbody>
        <tr>
            <th></th>
            <th></th>
        </tr>
        <tr>
            <th>name</th>
            <th><%= user.name %></th>
        </tr>
        <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
        </tr>
    </tbody>
</table>
<div class="row">
    <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary col-12" do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
</div>
<h2 class="mt-3">New book</h2>
<div>
    <%= form_with model: new_book do |f| %>
        <label class="row">
            <div class="col-12">
                Title
            </div>
            <div class="col-12">
                <%= f.text_field :title, class: "form-control" %>
            </div>
        </label>
        <label class="row">
            <div class="col-12">
                Opinion
            </div>
            <div class="col-12">
                <%= f.text_area :body, class: "form-control" %>
            </div>
        </label>
        <div>
            <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
    <% end %>
</div>